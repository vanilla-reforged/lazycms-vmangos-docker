FROM drupal:10-php8.1

RUN { \
    echo 'upload_max_filesize=64M'; \
    echo 'post_max_size=64M'; \
  } > /usr/local/etc/php/conf.d/uploads.ini

RUN \
  apt-get update -y && \
  apt-get install -y \
    git

RUN RUN curl -sS https://getcomposer.org/installer | php -- \
--install-dir=/usr/bin --filename=composer

RUN composer create-project dxpr/dxpr-marketing-cms-project my_site_name_dir
